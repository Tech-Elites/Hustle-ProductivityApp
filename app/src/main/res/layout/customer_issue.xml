<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/issueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_border"
            android:textSize="30dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nexatextbold"
            android:text="Issue Name" />

        <TextView
            android:id="@+id/issueDes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20dp"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:background="@drawable/list_view_border"
            android:textColor="@color/black"
            android:fontFamily="@font/nexatextbold"
            android:text="Issue Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/list_view_border"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left"


                android:background="@drawable/logoo" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left"

                android:layout_marginLeft="10dp"
                android:background="@drawable/loggoo" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"

                android:background="@drawable/logoogoo" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>