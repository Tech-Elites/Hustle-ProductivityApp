<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewissue"
    tools:context=".EachIssueScreen">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:padding="10dp"
            android:text="Issue Details:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingLeft="10dp"
            android:text="Title:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/eachIssuePageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingLeft="10dp"
            android:text="Description:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/eachIssuePageDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="250dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nexabold"
            android:onClick="eachIssueEmployeeApply"
            android:background="@drawable/button1"
            android:textColor="@color/white"
            android:text="Apply"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/alreadyAppliedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:paddingHorizontal="20dp"
            android:paddingTop="50dp"
            android:textColor="@color/white"
            android:text="You have already applied your changes."
            android:textAlignment="center"
            android:textSize="22dp" />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/eachIssuePageProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>