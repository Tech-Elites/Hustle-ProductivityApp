<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewissue2"
    tools:context=".RedeemCreditsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView

            android:textSize="30dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/nexabold"

            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Redeem your credits!!" />

        <LinearLayout

            android:onClick="onLeavesClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/redeem1" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="12dp"
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leaves-Holidays\n1000C" />
        </LinearLayout>

        <LinearLayout
            android:onClick="onCouponsClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingVertical="12dp"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coupons\n400C" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/redeem2" />
        </LinearLayout>

        <LinearLayout
            android:onClick="onSubClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/redeem3" />

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="12dp"
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subscriptions\n700C" />
        </LinearLayout>

        <LinearLayout
            android:onClick="onAscClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nexabold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingVertical="12dp"
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accesories\n1800C" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/redeem4"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>